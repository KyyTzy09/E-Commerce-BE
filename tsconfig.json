{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "src/common/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
